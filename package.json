{
  "name": "tanstack-effect-convex",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "scripts": {
    "format": "pnpm dlx ultracite fix",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:native": "turbo -F native dev",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @tanstack-effect-convex/backend dev",
    "dev:setup": "turbo -F @tanstack-effect-convex/backend dev:setup"
  },
  "dependencies": {
    "@tanstack-effect-convex/env": "workspace:*",
    "dotenv": "catalog:"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.10",
    "@tanstack-effect-convex/config": "workspace:*",
    "@types/node": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "turbo": "^2.6.3",
    "typescript": "catalog:",
    "ultracite": "6.5.1"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "pnpm dlx ultracite fix"
    ]
  },
  "packageManager": "pnpm@10.27.0"
}
